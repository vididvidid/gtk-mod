<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="GtkPrintPreviewPane" parent="GtkDialog">
    <property name="title" translatable="yes">Print Preview</property>
    <property name="default-width">900</property>
    <property name="default-height">700</property>
    <property name="modal">true</property>
    <property name="resizable">true</property>
    <signal name="response" handler="response_cb"/>

    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="spacing">6</property>
        <property name="margin-top">12</property>
        <property name="margin-bottom">12</property>
        <property name="margin-start">12</property>
        <property name="margin-end">12</property>

        <child>
          <object class="GtkBox">
            <property name="orientation">horizontal</property>
            <property name="spacing">6</property>
            <child>
              <object class="GtkButton" id="prev_page_button">
                <property name="label" translatable="yes">Previous</property>
                <property name="sensitive">false</property>
                <signal name="clicked" handler="prev_page_clicked_cb"/>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="page_label">
                <property name="label">Page 1 of 1</property>
                <property name="margin-start">12</property>
                <property name="margin-end">12</property>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="next_page_button">
                <property name="label" translatable="yes">Next</property>
                <property name="sensitive">false</property>
                <signal name="clicked" handler="next_page_clicked_cb"/>
              </object>
            </child>
            <child>
              <object class="GtkSeparator">
                <property name="orientation">vertical</property>
                <property name="margin-start">12</property>
                <property name="margin-end">12</property>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="zoom_in_button">
                <property name="label" translatable="yes">Zoom In</property>
                <signal name="clicked" handler="zoom_in_clicked_cb"/>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="zoom_label">
                <property name="label">100%</property>
                <property name="margin-start">12</property>
                <property name="margin-end">12</property>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="zoom_out_button">
                <property name="label" translatable="yes">Zoom Out</property>
                <signal name="clicked" handler="zoom_out_clicked_cb"/>
              </object>
            </child>
          </object>
        </child>

        <child>
          <object class="GtkScrolledWindow" id="scrolled_window">
            <property name="hexpand">true</property>
            <property name="vexpand">true</property>
            <property name="hscrollbar-policy">automatic</property>
            <property name="vscrollbar-policy">automatic</property>
            <child>
              <object class="GtkDrawingArea" id="preview_drawing_area">
                <property name="hexpand">true</property>
                <property name="vexpand">true</property>
                <property name="content-width">400</property>
                <property name="content-height">600</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    
    </template>
</interface>
